<Page x:Class="FishCycleApp.EditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="EditClientPage" Background="#E9ECEF">

    <Grid Margin="40,30,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Edit Client" FontSize="28" FontWeight="Bold" Foreground="#1a1a1a"/>
                <TextBlock Text="Client > Edit Client" FontSize="14" Foreground="#6C757D" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Image x:Name="imgUserProfile" Height="30" Width="30" Margin="0,0,10,0"/>
                <TextBlock x:Name="lblUserName" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="18" Foreground="#212529" Margin="0,0,20,0"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Background="White" CornerRadius="20" Padding="40" BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Top">
                        <Grid Margin="0,0,0,25">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Client ID" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="#F5F5F5">
                                <TextBox x:Name="txtClientID" 
                                         BorderThickness="0" 
                                         Padding="15,12" 
                                         FontSize="14" 
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"
                                         IsReadOnly="True"
                                         Foreground="#6C757D"/>
                            </Border>
                        </Grid>

                        <Grid Margin="0,0,0,25">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Name" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <TextBox x:Name="txtClientName" 
                                         BorderThickness="0" 
                                         Padding="15,12" 
                                         FontSize="14" 
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"/>
                            </Border>
                        </Grid>

                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Contact" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                    <TextBox x:Name="txtClientContact" 
                                             BorderThickness="0" 
                                             Padding="15,12" 
                                             FontSize="14" 
                                             VerticalContentAlignment="Center"
                                             Background="Transparent"/>
                                </Border>
                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Category" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                    <ComboBox x:Name="cmbClientCategory" 
                                              BorderThickness="0" 
                                              Padding="15,12" 
                                              FontSize="14" 
                                              VerticalContentAlignment="Center"
                                              Background="Transparent">
                                        <ComboBox.Resources>
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Padding" Value="10"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </Border>
                            </Grid>
                        </Grid>

                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Address" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <TextBox x:Name="txtClientAddress" 
                                 BorderThickness="0" 
                                 Padding="15,12" 
                                 FontSize="14" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="120"
                                 VerticalScrollBarVisibility="Auto"
                                 VerticalAlignment="Stretch"
                                 Background="Transparent"/>
                            </Border>
                        </Grid>

                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                        <Button x:Name="btnDelete" Content="DELETE" Padding="25,12" Background="#DC3545" Foreground="White" FontWeight="SemiBold" FontSize="12" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0" Click="btnDelete_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="8" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C82333"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnBack" Content="BACK" Padding="25,12" Background="White" Foreground="#333333" BorderBrush="#CCCCCC" BorderThickness="1" FontWeight="SemiBold" FontSize="12" Cursor="Hand" Margin="0,0,10,0" Click="btnBack_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="8" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnSave" Content="SAVE" Padding="35,12" Background="#C8E86C" Foreground="#2D5016" FontWeight="Bold" FontSize="12" BorderThickness="0" Cursor="Hand" Click="btnSave_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="8" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#B5D65A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

    </Grid>
</Page>