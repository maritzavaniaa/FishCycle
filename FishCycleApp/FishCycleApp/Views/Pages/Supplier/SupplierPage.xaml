<Page x:Class="FishCycleApp.SupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="SupplierPage" Background="#E9ECEF"
      IsVisibleChanged="SupplierPage_IsVisibleChanged">

    <Grid Margin="40,30,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Supplier" FontSize="28" FontWeight="Bold" Foreground="#1a1a1a"/>
            </StackPanel>

            <!-- User Info (right side) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <!-- Profile Picture -->
                <Image x:Name="imgUserProfile" Height="30" Width="30" Margin="0,0,10,0"/>
                <!-- User Name -->
                <TextBlock x:Name="lblUserName" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="18" Foreground="#212529" Margin="0,0,20,0"/>
            </StackPanel>
        </Grid>

        <!-- Search Bar and Filter Section -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Bar with Icon -->
            <Border Grid.Column="0" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            CornerRadius="25" 
            Background="White" 
            Height="45" 
            Padding="5,0"
            Margin="0,0,15,0"
            HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Icon -->
                    <TextBlock Grid.Column="0" 
                   Text="🔍"
                   Width="18" 
                   Height="18" 
                   Margin="15,0,10,0" 
                   VerticalAlignment="Center"/>

                    <!-- Search TextBox -->
                    <TextBox Grid.Column="1" 
                     x:Name="txtSearch" 
                     BorderThickness="0" 
                     Background="Transparent" 
                     VerticalContentAlignment="Center" 
                     Text="Search anything..." 
                     Foreground="#999999" 
                     FontSize="14" 
                     GotFocus="txtSearch_GotFocus" 
                     LostFocus="txtSearch_LostFocus" 
                     TextChanged="txtSearch_TextChanged" 
                     Padding="0,0,15,0"/>
                </Grid>
            </Border>

            <!-- Category Filter -->
            <Border Grid.Column="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Background="White" 
                Width="200" 
                Height="45" 
                Padding="5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Category Icon -->
                    <TextBlock Grid.Column="0" 
                       Text="🏷️" 
                       FontSize="16" 
                       Margin="12,0,8,0" 
                       VerticalAlignment="Center" RenderTransformOrigin="-0.405,0.517"/>

                    <ComboBox 
                      x:Name="cmbCategory" 
                      IsEnabled="True"
                      Background="White"        
                      BorderThickness="0" 
                      VerticalContentAlignment="Center" 
                      FontSize="14" 
                      Padding="5,0,12,0" 
                      SelectionChanged="cmbCategory_SelectionChanged" Margin="0,4,0,5" Grid.Column="1">

                        <ComboBoxItem Content="All Categories" IsSelected="True"/>
                        <ComboBoxItem Content="Fresh Catch"/>
                        <ComboBoxItem Content="First-Hand"/>
                        <ComboBoxItem Content="Reprocessed Stock"/>
                    </ComboBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Header Section inside white card -->
        <Border Grid.Row="2" Background="White" CornerRadius="20,20,0,0" Padding="25,20,25,15" BorderBrush="#E0E0E0" BorderThickness="1,1,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="All Supplier" FontSize="20" FontWeight="Bold" Foreground="#1a1a1a"/>
                    <TextBlock x:Name="txtResultInfo" Text="showing 1-10 result from 99 results" Foreground="#6C757D" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Right: Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnAdd" Content="ADD SUPPLIER" Padding="20,10" Margin="0,0,10,0" Background="#007ACC" Foreground="White" FontWeight="SemiBold" FontSize="12" BorderThickness="0" Cursor="Hand" Click="btnAdd_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0066B3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnLoad" Content="Refresh" Padding="20,10" Background="White" Foreground="#333333" BorderBrush="#CCCCCC" BorderThickness="1" FontWeight="SemiBold" FontSize="12" Cursor="Hand" Click="btnLoad_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid Section with Scroll (NO PAGINATION) -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" CornerRadius="0,0,20,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <DataGrid x:Name="dgvSuppliers" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Background="Transparent" BorderThickness="0" RowHeaderWidth="0" GridLinesVisibility="Horizontal" HeadersVisibility="Column" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" RowHeight="60" FontSize="13">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#495057"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="20,12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#E9ECEF"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="20,0">
                                            <ContentPresenter VerticalAlignment="Center" 
                                                HorizontalAlignment="Left"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Supplier ID" Binding="{Binding SupplierID}" Width="120" IsReadOnly="True"/>

                        <DataGridTextColumn Header="Name" Binding="{Binding SupplierName}" Width="220" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#212529"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Phone" Binding="{Binding SupplierPhone}" Width="140" IsReadOnly="True"/>

                        <DataGridTextColumn Header="Address" Binding="{Binding SupplierAddress}" Width="*" IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="Category" Width="*" MinWidth="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border x:Name="CategoryBorder" CornerRadius="20" Padding="8,8" HorizontalAlignment="Stretch" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding SupplierType}" Foreground="White" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding SupplierType}" Value="Fresh Catch">
                                            <Setter TargetName="CategoryBorder" Property="Background" Value="#B794F6"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SupplierType}" Value="First-Hand">
                                            <Setter TargetName="CategoryBorder" Property="Background" Value="#FFB088"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SupplierType}" Value="Reprocessed Stock">
                                            <Setter TargetName="CategoryBorder" Property="Background" Value="#FF8F8F"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Action" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Left" 
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0">
                                        <Button Click="btnView_Click" 
                                            Background="Transparent" 
                                            BorderBrush="Transparent" 
                                            Padding="0" 
                                            Margin="0,0,12,0" 
                                            Cursor="Hand" 
                                            ToolTip="View Supplier Details">
                                            <Image Source="/Resources/Images/Icons/icon_view.png" Width="20" Height="20"/>
                                        </Button>

                                        <Button Click="btnDelete_Click" 
                                            Background="Transparent" 
                                            BorderBrush="Transparent" 
                                            Padding="0" 
                                            Cursor="Hand" 
                                            ToolTip="Delete Client">
                                            <Image Source="/Resources/Images/Icons/icon_delete.png" Width="20" Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

    </Grid>
</Page>