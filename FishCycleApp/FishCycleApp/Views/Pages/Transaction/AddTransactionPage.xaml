<Page x:Class="FishCycleApp.Views.Pages.Transaction.AddTransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp.Views.Pages.Transaction"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="AddTransactionPage" Background="#E9ECEF">

    <Grid Margin="40,30,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Add Transaction" FontSize="28" FontWeight="Bold" Foreground="#1a1a1a"/>
                <TextBlock Text="Transaction > Add Transaction" FontSize="14" Foreground="#6C757D" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- User Info (right side) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <!-- Profile Picture -->
                <Image x:Name="imgUserProfile" Height="30" Width="30" Margin="0,0,10,0"/>
                <!-- User Name -->
                <TextBlock x:Name="lblUserName" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="18" Foreground="#212529" Margin="0,0,20,0"/>
            </StackPanel>
        </Grid>

        <!-- Form Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="20" Padding="40" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form Fields -->
                <StackPanel Grid.Row="0" VerticalAlignment="Top">

                    <!-- Transaction ID & Date Row -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Transaction ID Field -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Transaction ID" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <TextBox x:Name="txtTransactionID" 
                                         BorderThickness="0" 
                                         Padding="15,12" 
                                         FontSize="14" 
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"
                                         IsReadOnly="True"
                                         Foreground="#6C757D"/>
                            </Border>
                        </Grid>

                        <!-- Transaction Date Field -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Transaction Date" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <DatePicker x:Name="dpTransactionDate" 
                                            BorderThickness="0" 
                                            Padding="15,12" 
                                            FontSize="14" 
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"/>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Client & Employee Row -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Client ComboBox -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Client" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <ComboBox x:Name="cmbClient" 
                                          BorderThickness="0" 
                                          Padding="15,12" 
                                          FontSize="14" 
                                          VerticalContentAlignment="Center"
                                          Background="Transparent"
                                          DisplayMemberPath="ClientName"
                                          SelectedValuePath="ClientID">
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </Border>
                        </Grid>

                        <!-- Employee ComboBox -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Employee" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <ComboBox x:Name="cmbEmployee" 
                                          BorderThickness="0" 
                                          Padding="15,12" 
                                          FontSize="14" 
                                          VerticalContentAlignment="Center"
                                          Background="Transparent"
                                          DisplayMemberPath="EmployeeName"
                                          SelectedValuePath="EmployeeID">
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Payment Status & Total Amount Row -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Payment Status ComboBox -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Payment Status" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <ComboBox x:Name="cmbPaymentStatus" 
                                          BorderThickness="0" 
                                          Padding="15,12" 
                                          FontSize="14" 
                                          VerticalContentAlignment="Center"
                                          Background="Transparent">
                                    <ComboBoxItem Content="Pending" IsSelected="True"/>
                                    <ComboBoxItem Content="Paid"/>
                                    <ComboBoxItem Content="Cancelled"/>
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </Border>
                        </Grid>

                        <!-- Total Amount Field -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Total Amount (Rp)" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                                <TextBox x:Name="txtTotalAmount" 
                                         BorderThickness="0" 
                                         Padding="15,12" 
                                         FontSize="14" 
                                         VerticalContentAlignment="Center"
                                         Background="Transparent"/>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Notes Field (Optional) -->
                    <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Notes (Optional)" FontSize="14" FontWeight="SemiBold" Foreground="#212529" Margin="0,0,0,8"/>
                        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
                            <TextBox x:Name="txtNotes" 
                                     BorderThickness="0" 
                                     Padding="15,12" 
                                     FontSize="14" 
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80"
                                     VerticalContentAlignment="Top"
                                     Background="Transparent"/>
                        </Border>
                    </Grid>

                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button x:Name="btnCancel" Content="CANCEL" Padding="25,12" Background="White" Foreground="#333333" BorderBrush="#CCCCCC" BorderThickness="1" FontWeight="SemiBold" FontSize="12" Cursor="Hand" Margin="0,0,10,0" Click="btnCancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnSave" Content="SAVE" Padding="35,12" Background="#C8E86C" Foreground="#2D5016" FontWeight="Bold" FontSize="12" BorderThickness="0" Cursor="Hand" Click="btnSave_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B5D65A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>

    </Grid>
</Page>