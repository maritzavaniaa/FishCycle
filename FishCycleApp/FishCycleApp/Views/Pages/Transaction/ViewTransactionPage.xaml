<Page x:Class="FishCycleApp.Views.Pages.Transaction.ViewTransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp.Views.Pages.Transaction"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="ViewTransactionPage" Background="#E9ECEF">

    <Grid Margin="40,30,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header & Profile -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="View Transaction" FontSize="28" FontWeight="Bold" Foreground="#1a1a1a"/>
                <TextBlock Text="Transaction > View Transaction" FontSize="14" Foreground="#6C757D" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Profile -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Image x:Name="imgUserProfile" Height="30" Width="30" Margin="0,0,10,0"/>
                <TextBlock x:Name="lblUserName" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="18" Foreground="#212529" Margin="0,0,20,0"/>
            </StackPanel>
        </Grid>

        <!-- Action Button -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0" x:Name="btnBack" Content="← BACK" Padding="15,10" Background="#E9ECEF" Foreground="#495057" BorderBrush="#CCCCCC" BorderThickness="1" FontWeight="SemiBold" FontSize="12" Cursor="Hand" HorizontalAlignment="Left">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D6D8DB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">

                <!-- Delete Button -->
                <Button x:Name="btnDelete" Content="DELETE" Padding="25,12" Background="#DC3545" Foreground="White" FontWeight="SemiBold" FontSize="12" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0" Click="btnDelete_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C82333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Edit Button -->
                <Button x:Name="btnEdit" Content="EDIT" Padding="35,12" Background="#B794F6" Foreground="White" FontWeight="Bold" FontSize="12" BorderThickness="0" Cursor="Hand" Click="btnEdit_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A67DE6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content Section (READ ONLY) -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="0,0,0,20">

                <!-- Transaction Detail -->
                <Border Background="White" CornerRadius="20" Padding="40" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1: Transaction Number & Time -->
                        <Grid Grid.Row="0" Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Transaction Number -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Transaction Number" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="#6C757D" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Text="TS-000001" 
                                FontSize="16" Foreground="#212529"/>
                            </Grid>
                        </Grid>

                        <!-- Row 2: Employee & Client Contact -->
                        <Grid Grid.Row="1" Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Employee -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Employee" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="#6C757D" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Text="Amira Syafika" 
                                FontSize="16" Foreground="#212529"/>
                            </Grid>

                            <!-- Time -->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Date and Time" 
                                FontSize="14" FontWeight="SemiBold" 
                                Foreground="#6C757D" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Text="2025/10/10 11:59" 
                                FontSize="16" Foreground="#212529"/>
                            </Grid>
                        </Grid>

                        <!-- Row 3: Client & Client Contact -->
                        <Grid Grid.Row="2" Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Employee -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Client" 
                                FontSize="14" FontWeight="SemiBold" 
                                Foreground="#6C757D" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Text="Toko Ikan Segar Pak Rudi" 
                                FontSize="16" Foreground="#212529"/>
                            </Grid>

                            <!-- Client Contact -->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Client Contact" 
       FontSize="14" FontWeight="SemiBold" 
       Foreground="#6C757D" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Text="081234567800" 
   FontSize="16" Foreground="#212529"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2" Margin="0,0,0,25">
                            
                        </Grid>

                        <!-- Row 4: Address -->
                        <Grid Grid.Row="3" Margin="0,0,0,25">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Address" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="#6C757D" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Text="Pasar Ikan Muara Baru, Jakarta Utara" 
                       FontSize="16" Foreground="#212529" 
                       TextWrapping="Wrap"/>
                        </Grid>

                        <!-- Row 5: Payment Status -->
                        <Grid Grid.Row="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Payment Status" 
                           FontSize="14" FontWeight="SemiBold" 
                           Foreground="#6C757D" Margin="0,0,0,8"/>

                            <Border Grid.Row="1" 
                            Background="#C8E86C" 
                            CornerRadius="20" Padding="12,6"
                            HorizontalAlignment="Left">
                                <TextBlock Text="Lunas" 
                                   Foreground="#2D5016" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"/>
                            </Border>
                        </Grid>

                    </Grid>
                </Border>

                <!-- Item(s) Detail -->
                <Border Background="White" CornerRadius="20" Padding="40" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20">
                    <StackPanel>

                        <TextBlock Text="Item(s)" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Foreground="#1a1a1a" 
                       Margin="0,0,0,20"/>

                        <!-- Tabel Item -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Item ID" FontSize="14" FontWeight="SemiBold" Foreground="#495057"/>
                            <TextBlock Grid.Column="1" Text="Name" FontSize="14" FontWeight="SemiBold" Foreground="#495057"/>
                            <TextBlock Grid.Column="2" Text="Grade" FontSize="14" FontWeight="SemiBold" Foreground="#495057"/>
                            <TextBlock Grid.Column="3" Text="Quantity (kg)" FontSize="14" FontWeight="SemiBold" Foreground="#495057"/>
                            <TextBlock Grid.Column="4" Text="Unit Price (Rp)" FontSize="14" FontWeight="SemiBold" Foreground="#495057"/>
                            <TextBlock Grid.Column="5" Text="Total (Rp)" FontSize="14" FontWeight="SemiBold" Foreground="#495057" HorizontalAlignment="Right"/>
                        </Grid>

                        <Separator Background="#E9ECEF" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="PID-000001" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="1" Text="Tuna Segar" FontSize="14" Foreground="#212529"/>
                            <Border Grid.Column="2" CornerRadius="20" Padding="12,6" Background="#C8E86C" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="A" Foreground="#2D5016" FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            <TextBlock Grid.Column="3" Text="25" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="4" Text="85,000" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="5" Text="2,125,000" FontSize="14" Foreground="#212529" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="PID-000002" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="1" Text="Salmon Segar" FontSize="14" Foreground="#212529"/>
                            <Border Grid.Column="2" CornerRadius="20" Padding="12,6" Background="#C8E86C" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="A" Foreground="#2D5016" FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            <TextBlock Grid.Column="3" Text="10" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="4" Text="110,000" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="5" Text="1,100,000" FontSize="14" Foreground="#212529" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="PID-000003" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="1" Text="Cakalang Segar" FontSize="14" Foreground="#212529"/>
                            <Border Grid.Column="2" CornerRadius="20" Padding="12,6" Background="#F8D5A1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="B" Foreground="#79552E" FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            <TextBlock Grid.Column="3" Text="40" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="4" Text="40,000" FontSize="14" Foreground="#212529"/>
                            <TextBlock Grid.Column="5" Text="1,600,000" FontSize="14" Foreground="#212529" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                       Text="Sub Total" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="#495057" 
                       Margin="0,0,30,0" 
                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                       Text="Rp 4,825,000" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#212529" 
                       HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Distribution Detail -->
                <Border Background="White" CornerRadius="20" Padding="40" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Distribution" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Foreground="#1a1a1a" 
                       Margin="0,0,0,25"/>
                        
                        <Grid Grid.Row="1" Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 1: Distribution Method & Status -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Distribution Method" FontSize="14" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,8"/>
                                <Border Grid.Row="1" CornerRadius="20" Padding="12,6" Background="#E4C1F9" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="Distribution Agent" Foreground="#5B3E89" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Status" FontSize="14" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,8"/>
                                <Border Grid.Row="1" CornerRadius="20" Padding="12,6" Background="#C8E86C" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="Sampai Tujuan" Foreground="#2D5016" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Row 2: Departure & Arrival Time -->
                        <Grid Grid.Row="2" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Departure Time" FontSize="14" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="1" Text="2025/10/10 14:00" FontSize="16" Foreground="#212529" FontWeight="Normal"/>
                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Arrival Time" FontSize="14" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="1" Text="2025/10/11 03:00" FontSize="16" Foreground="#212529" FontWeight="Normal"/>
                            </Grid>
                        </Grid>

                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
