<Page x:Class="FishCycleApp.Views.Pages.Stock.StockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="StockPage" Background="#E9ECEF">

    <Grid Margin="40,30,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Stock" FontSize="28" FontWeight="Bold" Foreground="#1a1a1a"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Image x:Name="imgUserProfile" Width="30" Height="30" Margin="0,0,10,0"/>
                <TextBlock x:Name="lblUserName" FontSize="18" FontWeight="SemiBold" Foreground="#212529"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="20" Background="White" Padding="20" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Total Jenis Ikan" FontSize="16" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Image Source="/Resources/Images/Icons/Card_Stock/fish.png" Width="28"/>
                        <TextBlock x:Name="txtTotalTypes" Text="0 Jenis" FontSize="22" FontWeight="Bold" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" CornerRadius="20" Background="White" Padding="20" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Total Stok" FontSize="16" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Image Source="/Resources/Images/Icons/Card_Stock/stock.png" Width="28"/>
                        <TextBlock x:Name="txtTotalStock" Text="0 kg" FontSize="22" FontWeight="Bold" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" CornerRadius="20" Background="White" Padding="20" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Nilai Total Stok" FontSize="16" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Image Source="/Resources/Images/Icons/Card_Stock/value.png" Width="28"/>
                        <TextBlock x:Name="txtTotalValue" Text="Rp0" FontSize="22" FontWeight="Bold" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" CornerRadius="20" Background="White" Padding="20">
                <StackPanel>
                    <TextBlock Text="Stok Rendah" FontSize="16" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Image Source="/Resources/Images/Icons/Card_Stock/low.png" Width="28"/>
                        <TextBlock x:Name="txtLowStock" Text="0 Produk" FontSize="22" FontWeight="Bold" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#CCC" BorderThickness="1" CornerRadius="25" Background="White" Height="45" Padding="5,0" Margin="0,0,15,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="🔍" Margin="15,0,10,0" VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1" x:Name="txtSearch" BorderThickness="0" Background="Transparent"
                             VerticalContentAlignment="Center" Text="Search anything..."
                             Foreground="#999" FontSize="14"
                             GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus" 
                             TextChanged="txtSearch_TextChanged"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" Background="White" Height="45" Padding="5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="🏷️" FontSize="16" Margin="12,0,8,0" VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1" x:Name="cmbCategory" BorderThickness="0" FontSize="14"
                              VerticalContentAlignment="Center" Padding="5,0,12,0"
                              SelectionChanged="cmbCategory_SelectionChanged">
                        <ComboBoxItem Content="All Grades" IsSelected="True"/>
                        <ComboBoxItem Content="A"/>
                        <ComboBoxItem Content="B"/>
                        <ComboBoxItem Content="C"/>
                    </ComboBox>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="3" Background="White" CornerRadius="20,20,0,0" Padding="25,20,25,15" BorderBrush="#E0E0E0" BorderThickness="1,1,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="All Stock" FontSize="20" FontWeight="Bold" Foreground="#1a1a1a"/>
                    <TextBlock x:Name="txtResultInfo" Foreground="#6C757D" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnAdd" Content="ADD STOCK" Padding="20,10" Margin="0,0,10,0"
                            Background="#007ACC" Foreground="White" FontWeight="SemiBold" FontSize="12" 
                            BorderThickness="0" Cursor="Hand" Click="btnAdd_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0066B3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnLoad" Content="Refresh" Padding="20,10"
                            Background="White" Foreground="#333333" BorderBrush="#CCCCCC" BorderThickness="1" 
                            FontWeight="SemiBold" FontSize="12" Cursor="Hand" Click="btnLoad_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="4" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1" CornerRadius="0,0,20,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <DataGrid x:Name="dgvStock" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                          Background="Transparent" BorderThickness="0" RowHeaderWidth="0"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column" 
                          VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled"
                          RowHeight="60" FontSize="13">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#495057"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="20,12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#E9ECEF"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="20,0">
                                            <ContentPresenter VerticalAlignment="Center" 
                                                              HorizontalAlignment="Left"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product ID" Binding="{Binding ProductID}" Width="Auto" MinWidth="120" IsReadOnly="True"/>

                        <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="180" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#212529"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Qty (kg)" Binding="{Binding Quantity, StringFormat=N2}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Price (Rp)" Binding="{Binding UnitPrice, StringFormat=N0}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Total (Rp)" Binding="{Binding TotalValue, StringFormat=N0}" Width="140" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="*" MinWidth="180" IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="Action" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Left" 
                                                VerticalAlignment="Center"
                                                Margin="10,0,0,0">
                                        <Button Click="btnView_Click" 
                                                Background="Transparent" 
                                                BorderBrush="Transparent" 
                                                Padding="0" 
                                                Margin="0,0,12,0" 
                                                Cursor="Hand" 
                                                ToolTip="View Stock Details">
                                            <Image Source="/Resources/Images/Icons/icon_view.png" Width="20" Height="20"/>
                                        </Button>

                                        <Button Click="btnDelete_Click" 
                                                Background="Transparent" 
                                                BorderBrush="Transparent" 
                                                Padding="0" 
                                                Cursor="Hand" 
                                                ToolTip="Delete Stock">
                                            <Image Source="/Resources/Images/Icons/icon_delete.png" Width="20" Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>