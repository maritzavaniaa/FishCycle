<Window x:Class="FishCycleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishCycleApp"
        mc:Ignorable="d"
        Title="Login Page" Height="572" Width="929">
    <Grid>
        <Image Source="/Images/bg_ikan.png" Stretch="UniformToFill"/>
        <Border Width="427" Height="363"
                Background="#F8F9FA"
                CornerRadius="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="40">

            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  Opacity="0.2"
                                  BlurRadius="10"
                                  ShadowDepth="5"/>
            </Border.Effect>

            <StackPanel x:Name="LoginContentPanel" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Image Source="/Images/logo_lengkap.png" Width="180" Margin="0,0,0,0"/>

                <TextBlock Text="Welcome !!" 
                           FontSize="30" FontWeight="Bold" FontFamily="Segoe UI Semibold"
                           Foreground="#00334E" 
                           Margin="0,10,0,0" HorizontalAlignment="Center"/>

                <TextBlock Text="Please enter your credentials to log in"
                           FontSize="12" FontFamily="Segoe UI Semilight"
                           Margin="0,0,0,0" 
                           HorizontalAlignment="Center"
                           Foreground="#212529"/>

                <Button x:Name="btnLogin"
                        Content="LOG IN WITH GOOGLE"
                        Width="267" Height="42"
                        Background="#0077B6" Foreground="#F8F9FA"
                        FontSize="13" FontWeight="SemiBold" FontFamily="Segoe UI Historic"
                        Margin="0,30,0,0"
                        Click="btnLogin_Click">

                    <Button.Effect>
                        <DropShadowEffect Color="Black"
                                          Opacity="0.3"
                                          BlurRadius="5"
                                          ShadowDepth="3"
                                          Direction="320"/>
                    </Button.Effect>

                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
