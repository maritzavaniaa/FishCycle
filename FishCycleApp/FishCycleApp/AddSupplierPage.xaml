<Page x:Class="FishCycleApp.AddSupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="AddSupplierPage"
      Background="#E9ECEF">

    <Grid Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Grid.Row="0"
                   Text="Add New Supplier"
                   FontSize="30"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- FORM CONTENT -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">

            <!-- Supplier Name -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Name:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSupplierName" Width="300"/>
            </StackPanel>

            <!-- Phone -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Phone:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSupplierPhone" Width="300"/>
            </StackPanel>

            <!-- Address -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Address:" Width="120" VerticalAlignment="Top"/>
                <TextBox x:Name="txtSupplierAddress"
                         Width="300"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </StackPanel>

            <!-- Category -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Category:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbSupplierCategory"
                          Width="200" Height="30"/>
            </StackPanel>

        </StackPanel>

        <!-- FOOTER BUTTONS -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="btnCancel_Click"/>

            <Button x:Name="btnSave"
                    Content="Save"
                    Width="120"
                    Background="#007ACC"
                    Foreground="White"
                    Click="btnSave_Click"/>

        </StackPanel>

    </Grid>
</Page>
