<Page x:Class="FishCycleApp.EditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="EditClientPage" Background="#E9ECEF">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Edit Client" FontSize="30" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Client ID:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtClientID" Width="300" IsReadOnly="True" Background="#EFEFEF"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Name:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtClientName" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Contact:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtClientContact" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Address:" Width="120" VerticalAlignment="Top"/>
                <TextBox x:Name="txtClientAddress" Width="300" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Category:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbClientCategory" Width="200" Height="30">
                </ComboBox>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">

            <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="0,0,10,0" 
                    Background="Red" Foreground="White"
                    Click="btnDelete_Click"/>

            <Button x:Name="btnBack" Content="Back" Width="100" Margin="0,0,10,0" 
                    Click="btnBack_Click"/>

            <Button x:Name="btnSave" Content="Save" Width="120" 
                    Background="#007ACC" Foreground="White"
                    Click="btnSave_Click"/>

        </StackPanel>
    </Grid>
</Page>
