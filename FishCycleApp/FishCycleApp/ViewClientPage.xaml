<Page x:Class="FishCycleApp.ViewClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="ViewClientPage" Background="#E9ECEF">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="View Client Detail" FontSize="30" FontWeight="Bold" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">

                <Button x:Name="btnBack" Content="BACK" Width="80" Margin="0,0,15,0"
                        Click="btnBack_Click"/>

                <Button x:Name="btnEdit" Content="EDIT" Width="80" Margin="0,0,10,0"
                        Background="#007ACC" Foreground="White"
                        Click="btnEdit_Click"/>

                <Button x:Name="btnDelete" Content="DELETE" Width="80" 
                        Background="Red" Foreground="White"
                        Click="btnDelete_Click"/>

            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Margin="10,20,10,10">

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Client ID:" Width="120" FontWeight="SemiBold"/>
                <TextBlock x:Name="lblClientID" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Name:" Width="120" FontWeight="SemiBold"/>
                <TextBlock x:Name="lblClientName" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Contact:" Width="120" FontWeight="SemiBold"/>
                <TextBlock x:Name="lblClientContact" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Category:" Width="120" FontWeight="SemiBold"/>
                <TextBlock x:Name="lblClientCategory" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Address:" Width="120" FontWeight="SemiBold" VerticalAlignment="Top"/>
                <TextBlock x:Name="lblClientAddress" Width="300" TextWrapping="Wrap"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Page>