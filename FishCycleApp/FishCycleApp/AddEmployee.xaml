<Page x:Class="FishCycleApp.AddEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishCycleApp"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="AddEmployeePage" Background="#E9ECEF">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Add New Employee" FontSize="30" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form Input -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">

            <!-- Employee Name -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Name:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtEmployeeName" Width="300"/>
            </StackPanel>

            <!-- Google Account -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Google Account:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtGoogleAccount" Width="300"/>
            </StackPanel>


        </StackPanel>

        <!-- Buttons (Cancel & Save) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Margin="0,0,10,0" 
                    Click="btnCancel_Click"/>

            <Button x:Name="btnSave" Content="Save" Width="120" 
                    Background="#007ACC" Foreground="White"
                    Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
